<% if user_signed_in? %>

   <div id="user_menu" class="dropdown">
      <button id="user_menu_button" class="btn btn-primary dropdown-toggle" ty
pe="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         <span class="fa fa-user-o visible-xs-block" aria-hidden="true"></span>
         <span class="sr-only">View</span>
         <span class="hidden-xs">&nbsp;<%= current_user.name %></span>
         <span class="sr-only"> profile</span>
         <span class="fa fa-chevron-down" ></span>
         <span class="fa fa-chevron-up" ></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
         <li>
            <%= link_to t("hyrax.toolbar.dashboard.menu"), hyrax.dashboard_path %>
         </li>
         <li role="separator" aria-hidden="true" class="divider"></li>
         <li>
           <%= link_to t("hyrax.toolbar.profile.logout"), main_app.destroy_user_session_path %>
         </li>
      </ul>
   </div>

<% else %>

   <%= link_to main_app.new_user_session_path, class:"btn btn-primary", id:"user_login_link" do %>
      <%= t("hyrax.toolbar.profile.login") %>
      <span class="fa fa-sign-in" aria-hidden="true"></span> 
   <% end %>

<% end %>

