<header role="banner">
  <div class="flex_row"> 
     <div id="header_logo_container">
        <%= render partial: '/logo' %>
     </div>
  
     <!-- makes horizontal space -->
     <div class="flex_hfill"></div>

     <div id="header_notifications_container">
        <% if user_signed_in? %>
           <%= link_to sufia.notifications_path, class: 'btn btn-primary' do %>
              <span class="text">Notifications</span>
              <%= render partial: 'users/notify_number' %>
           <% end %>
        <% end %> 
     </div>

     <div id="user_menu_container">
        <%= render partial: '/local/user_menu' %>
     </div>
  </div>
  <nav class="flex_row" role="navigation">

     <div id="header_navbar" class="navbar">
        <div class="navbar-header">
           <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#header_navmenu">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                        
           </button>
        </div>
        <div class="collapse navbar-collapse" id="header_navmenu">
           <ul class="nav navbar-nav">
             <li class="active"><a href="#">Home</a></li>
             <li><a href="help">Help</a></li>
          </ul>
        </div>
     </div>


     <div id="header_search">
        <%= render partial: 'catalog/search_form' %>
     </div>


  </nav>
</header>
