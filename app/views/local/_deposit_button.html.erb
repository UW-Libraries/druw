<%= render '/shared/select_work_type_modal' if create_work_presenter.many? %>
<% if signed_in? %>
   <% if create_work_presenter.many? %>
      <button type="button" class="btn modal-btn" data-behavior="select-work"
              data-target="#worktypes-to-create" data-create-type="single">
          <%= t(:'hyrax.nav_menu.deposit') %>
      </button>
   <% else # simple link to the first work type %>
      <%= link_to  t(:'hyrax.nav_menu.deposit'),
          new_polymorphic_path([main_app, create_work_presenter.first_model]),
          class: 'btn modal-btn'
      %>
   <% end %>
<% else %>
   <%= link_to t(:'hyrax.nav_menu.deposit'),
       hyrax.dashboard_path,
       class: "btn modal-btn"
   %>
<% end %>
