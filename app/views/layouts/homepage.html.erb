<!DOCTYPE html>
<html lang="<%= t("sufia.document_language") %>">
<head>
  <%= render "layouts/head_tag_content"%>
</head>

<body>
<%= render '/local/banner' %>

<div class="image-masthead">
  <div class="background-container" style="background-image: url('<%= asset_path Sufia.config.banner_image %>')"></div>
  <span class="background-container-gradient"></span>

  <div class="container site-title-container">
    <div class="site-title h1" style="text-align: center;">
      <%= render "sufia/homepage/marketing" if controller_name == 'homepage' %>
    </div>
  </div>

</div>

<main role="main">
   <%= render '/flash_msg' %>
   <%= render 'sufia/homepage/announcement' if controller_name == 'homepage' %>
   <div id="content-wrapper" class="container">
     <%= render 'local/static_title_h1' if controller_name == 'static' %>
     <%= yield %>
   </div><!-- /#content-wrapper -->
</main>
<%= render 'shared/footer' %>
<%= render 'shared/ajax_modal' %>
</body>
</html>
